---
interface Props {
  last?: boolean;
  receiving?: boolean;
}

const { last, receiving } = Astro.props;
---

<div
  class=`px-3 py-2 rounded-xl text-xs w-fit max-w-[200px] ${receiving ? 'self-start bg-very-light-violet text-moderate-violet shadow-none' : 'self-end bg-white text-desaturated-dark-violet shadow-sm'} ${last ? 'mb-4' : 'mb-3'}`
>
  <slot />
</div>
